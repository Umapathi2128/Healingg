<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/pink_logo"
        />
    <TextView
        android:id="@+id/sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Sign In"
        android:layout_marginLeft="40dp"
        android:textColor="#f6cec5c5"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        />
    <TextView
            android:id="@+id/forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/logo"
            app:layout_constraintRight_toRightOf="parent"
            android:text="Forget Password"
            android:layout_marginRight="40dp"
            android:textColor="#f6cec5c5"
            android:textSize="14sp"
            android:layout_marginTop="20dp"
    />
    <EditText
            android:id="@+id/email2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="Enter Email"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="15dp"
            android:singleLine="true"
        app:layout_constraintTop_toBottomOf="@id/sign_up"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="14sp"
        android:paddingStart="20dp"
        android:paddingEnd="2dp"
        android:background="@drawable/drawable_back"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="Enter Password"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:singleLine="true"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/email2"
        android:id="@+id/pass2"
        android:textColor="@android:color/white"
        android:paddingStart="20dp"
        android:paddingEnd="2dp"
        android:layout_marginTop="15dp"
        android:textColorHint="@android:color/white"
        android:textSize="14sp"
        android:background="@drawable/drawable_back"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Sign In"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/pass2"
        android:id="@+id/SignIn_Button"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textSize="12sp"
        android:background="@drawable/drawable_pink_background"
        />
    <ImageView
        android:id="@+id/img_horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/horizontal_pink_line"
        app:layout_constraintTop_toBottomOf="@id/SignIn_Button"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/already_have_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/img_horizontal_line"
        android:text="Don't have a HEALINGG account?"
        android:textColor="@android:color/white"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/tvForSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/already_have_account"
        android:text="SignUp"
        android:textColor="#e30855"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        />


</android.support.constraint.ConstraintLayout>