<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@drawable/splash_background">
    <ImageView
            android:id="@+id/logo2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/pink_logo"

    />
    <TextView
            android:id="@+id/sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/logo2"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="password"
            android:layout_marginLeft="40dp"
            android:textColor="#f6cec5c5"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
    />
    <TextView
            android:id="@+id/usename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/logo2"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="40dp"
            android:textColor="#f6cec5c5"
            android:layout_marginRight="40dp"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
    />

    <EditText
            android:id="@+id/newPass"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Enter new password"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="15dp"
            android:singleLine="true"
            app:layout_constraintTop_toBottomOf="@id/sign_up"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="14sp"
            android:paddingStart="20dp"
            android:inputType="textPassword"
            android:paddingEnd="2dp"
            android:background="@drawable/drawable_back"
    />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Re-Enter Password"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:singleLine="true"
            android:inputType="textPassword"
            app:layout_constraintTop_toBottomOf="@id/newPass"
            android:id="@+id/rePass"
            android:textColor="@android:color/white"
            android:paddingStart="20dp"
            android:paddingEnd="2dp"
            android:layout_marginTop="15dp"
            android:textColorHint="@android:color/white"
            android:textSize="14sp"
            android:background="@drawable/drawable_back"
    />
    <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Change Password"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/rePass"
            android:id="@+id/changePassword"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textSize="12sp"
            android:background="@drawable/drawable_pink_background"
    />

    <TextView
            android:id="@+id/tvForget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/changePassword"
            android:text="SignIn"
            android:textColor="#e30855"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textSize="14sp"
    />


</android.support.constraint.ConstraintLayout>