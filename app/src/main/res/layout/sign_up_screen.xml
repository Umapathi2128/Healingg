<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:id="@+id/signUp_root"
                                             android:background="@drawable/splash_background">
    <ImageView
            android:id="@+id/logo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="45dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/pink_logo"
    />
    <TextView
            android:id="@+id/sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/logo"
            android:text="Sign Up"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
    />
    <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Enter Email"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/sign_up"
            android:id="@+id/email"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="14sp"
            android:paddingStart="20dp"
            android:paddingEnd="2dp"
            android:background="@drawable/drawable_back"
            android:paddingRight="2dp" android:paddingLeft="20dp"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Enter Password"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            app:layout_constraintTop_toBottomOf="@id/email"
            android:id="@+id/pass"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:paddingStart="20dp"
            android:paddingEnd="2dp"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            android:textColorHint="@android:color/white"
            android:textSize="14sp"
            android:background="@drawable/drawable_back"
    />
    <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Confirm Password"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/pass"
            android:id="@+id/conform_pass"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="14sp"
            android:paddingStart="20dp"
            android:inputType="textPassword"
            android:paddingEnd="2dp"
            android:background="@drawable/drawable_back"
    />
    <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/conform_pass"
            android:id="@+id/SignUp_Button"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textSize="12sp"
            android:background="@drawable/drawable_pink_background"
    />
    <ImageView
            android:id="@+id/img_horizontal_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/horizontal_pink_line"
            app:layout_constraintTop_toBottomOf="@id/SignUp_Button"
            android:layout_marginTop="10dp"
    />
    <TextView
            android:id="@+id/already_have_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/img_horizontal_line"
            android:text="Already have a HEALINGG account?"
            android:textColor="@android:color/white"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
    />
    <TextView
            android:id="@+id/tvForSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/already_have_account"
            android:text="SignIn"
            android:textColor="#e30855"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:textStyle="bold"
    />


</android.support.constraint.ConstraintLayout>